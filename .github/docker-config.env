# Docker Workflow Configuration
# This file contains settings that can be customized for your specific needs

# Default registry (GitHub Container Registry)
REGISTRY=ghcr.io

# Repository owner/name (automatically detected in workflows)
# IMAGE_NAME will be set to ${{ github.repository }}

# Apps to always build on release (even if not changed)
# By default, all apps with Dockerfiles are built
RELEASE_BUILD_ALL_APPS=true

# Enable multi-platform builds (linux/amd64,linux/arm64)
ENABLE_MULTIPLATFORM=true

# Enable security scanning with Trivy
ENABLE_SECURITY_SCAN=true

# Enable build attestation (SLSA provenance)
ENABLE_BUILD_ATTESTATION=true

# Branch protection: only build on these branches
PROTECTED_BRANCHES=main,develop

# Custom tags for different branches
# Format: BRANCH_NAME=TAG_NAME
BRANCH_TAGS=main:latest,develop:develop

# Docker build arguments (if needed by your Dockerfiles)
# These will be passed to docker build as --build-arg
DOCKER_BUILD_ARGS=

# Custom labels for Docker images
DOCKER_LABELS=org.opencontainers.image.vendor=YourCompany

# Maximum parallel builds (to avoid hitting resource limits)
MAX_PARALLEL_BUILDS=3
